<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/linearLayoutAttribution"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center|center_vertical"
        android:layout_margin="30dp"
        android:orientation="vertical"
        tools:context=".Attribution">

    <TextView
            android:id="@+id/attributionTitre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/choix_roles"
            android:textSize="@dimen/attribution_titre"
            android:textAlignment="center"
            android:layout_marginBottom="@dimen/carte_espace"
            android:textColor="@android:color/black"/>

</LinearLayout>